{
	"name": "GerericLoad",
	"properties": {
		"activities": [
			{
				"name": "CopyTables",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "dbo.@{pipeline().parameters.ParamSrcTableName}"
					},
					{
						"name": "Destination",
						"value": "dbo.@{pipeline().parameters.ParamTrgtTableName}"
					}
				],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": {
							"value": "@concat('select* from dbo.',pipeline().parameters.ParamSrcTableName)",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"sink": {
						"type": "AzureSqlSink",
						"preCopyScript": {
							"value": "@{if(equals(pipeline().parameters.TruncateFlag,'Y'),concat('TRUNCATE TABLE ',pipeline().parameters.ParamTrgtTableName),'X')}",
							"type": "Expression"
						},
						"writeBehavior": "insert",
						"sqlWriterUseTableLock": false,
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "DS_AzureSqlTbl_StudentSrc",
						"type": "DatasetReference",
						"parameters": {
							"ParamTblName": {
								"value": "@pipeline().parameters.ParamSrcTableName",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "DS_AzureSqlTbl_StudentSrc",
						"type": "DatasetReference",
						"parameters": {
							"ParamTblName": {
								"value": "@pipeline().parameters.ParamTrgtTableName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"ParamSrcTableName": {
				"type": "string"
			},
			"ParamTrgtTableName": {
				"type": "string"
			},
			"TruncateFlag": {
				"type": "string",
				"defaultValue": "Y"
			}
		},
		"annotations": [],
		"lastPublishTime": "2023-09-05T17:39:22Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}