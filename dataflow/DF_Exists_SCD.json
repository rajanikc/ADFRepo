{
	"name": "DF_Exists_SCD",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_AzureSqlTbl_StudentSrc",
						"type": "DatasetReference"
					},
					"name": "StudentSrcTblBranch1"
				},
				{
					"dataset": {
						"referenceName": "DS_AzureSqlTbl_StudentDim",
						"type": "DatasetReference"
					},
					"name": "StudentDimTblRef"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_AzureSqlTbl_StudentDim",
						"type": "DatasetReference"
					},
					"name": "StudentDimSink"
				}
			],
			"transformations": [
				{
					"name": "NewStudentCheck",
					"description": "Checks for new students"
				},
				{
					"name": "DeriveStudentColumns"
				},
				{
					"name": "DropSkeyIncField"
				},
				{
					"name": "StudSurrogateKey"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "LkpExistingStudents"
				},
				{
					"name": "SplitUpdateRecordsToUpdate"
				},
				{
					"name": "selectUpdateColumns"
				},
				{
					"name": "UnionInsertandUpdate"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     MaxSurrKey as integer (100)",
				"}",
				"source(output(",
				"          ROLL_NO as integer,",
				"          FIRST_NAME as string,",
				"          MIDDLE_NAME as string,",
				"          LAST_NAME as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT  ROLL_NO,\\nFIRST_NAME,\\nMIDDLE_NAME,\\nLAST_NAME FROM DBO.STUDENT_SRC\\n',",
				"     format: 'query') ~> StudentSrcTblBranch1",
				"source(output(",
				"          STUDENT_SKEY_TARGET as integer,",
				"          ROLL_NO as integer,",
				"          FIRST_NAME_TARGET as string,",
				"          MIDDLE_NAME_TARGET as string,",
				"          LAST_NAME_TARGET as string,",
				"          FULL_NAME_TARGET as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     query: 'SELECT\\nSTUDENT_SKEY STUDENT_SKEY_TARGET,\\nROLL_NO,\\nFIRST_NAME FIRST_NAME_TARGET,\\nMIDDLE_NAME MIDDLE_NAME_TARGET,\\nLAST_NAME LAST_NAME_TARGET,\\nFULL_NAME FULL_NAME_TARGET\\nFROM DBO.STUDENT_DIM\\nWHERE ACTIVE_FLAG = \\'Y\\'',",
				"     format: 'query') ~> StudentDimTblRef",
				"StudentSrcTblBranch1, StudentDimTblRef exists(StudentSrcTblBranch1@ROLL_NO == StudentDimTblRef@ROLL_NO,",
				"     negate:true,",
				"     broadcast: 'auto')~> NewStudentCheck",
				"NewStudentCheck derive(FULL_NAME = concat(FIRST_NAME, ' ', MIDDLE_NAME, ' ',LAST_NAME),",
				"          START_DATE = currentDate(),",
				"          END_DATE = toDate('9999-01-01'),",
				"          ACTIVE_FLAG = 'Y') ~> DeriveStudentColumns",
				"derivedColumn1 select(mapColumn(",
				"          ROLL_NO,",
				"          FIRST_NAME,",
				"          MIDDLE_NAME,",
				"          LAST_NAME,",
				"          FULL_NAME,",
				"          START_DATE,",
				"          END_DATE,",
				"          ACTIVE_FLAG,",
				"          STUDENT_SKEY",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> DropSkeyIncField",
				"UnionInsertandUpdate keyGenerate(output(STUDENT_SKEY_INCR as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> StudSurrogateKey",
				"StudSurrogateKey derive(STUDENT_SKEY = STUDENT_SKEY_INCR+$MaxSurrKey) ~> derivedColumn1",
				"StudentSrcTblBranch1, StudentDimTblRef lookup(StudentSrcTblBranch1@ROLL_NO == StudentDimTblRef@ROLL_NO,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> LkpExistingStudents",
				"LkpExistingStudents split(!isNull(STUDENT_SKEY_TARGET) && (FIRST_NAME != FIRST_NAME_TARGET || MIDDLE_NAME != MIDDLE_NAME_TARGET || LAST_NAME_TARGET != LAST_NAME_TARGET),",
				"     disjoint: false) ~> SplitUpdateRecordsToUpdate@(UpdateRecords, DefaultStream)",
				"SplitUpdateRecordsToUpdate@UpdateRecords select(mapColumn(",
				"          ROLL_NO = SplitUpdateRecordsToUpdate@UpdateRecords@ROLL_NO,",
				"          FIRST_NAME,",
				"          MIDDLE_NAME,",
				"          LAST_NAME",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectUpdateColumns",
				"DeriveStudentColumns, selectUpdateColumns union(byName: true)~> UnionInsertandUpdate",
				"SplitUpdateRecordsToUpdate@UpdateRecords select(mapColumn(",
				"          STUDENT_SKEY = STUDENT_SKEY_TARGET",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"DropSkeyIncField sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          STUDENT_SKEY as integer,",
				"          roll_no as integer,",
				"          first_name as string,",
				"          middle_name as string,",
				"          last_name as string,",
				"          full_name as string,",
				"          START_DATE as date,",
				"          END_DATE as date,",
				"          ACTIVE_FLAG as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          STUDENT_SKEY,",
				"          roll_no = ROLL_NO,",
				"          first_name = FIRST_NAME,",
				"          middle_name = MIDDLE_NAME,",
				"          last_name = LAST_NAME,",
				"          full_name = FULL_NAME,",
				"          START_DATE,",
				"          END_DATE,",
				"          ACTIVE_FLAG",
				"     )) ~> StudentDimSink"
			]
		}
	}
}