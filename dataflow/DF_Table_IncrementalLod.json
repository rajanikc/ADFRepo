{
	"name": "DF_Table_IncrementalLod",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase05",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "LSAzureDLS",
						"type": "LinkedServiceReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [],
			"scriptLines": [
				"parameters{",
				"     pSrcTblName as string ('EMPLOYEE_LIST'),",
				"     pDeltaFlag as string ('Y'),",
				"     pUpdTimeStamp as string ('2023-10-05 12:00:00'),",
				"     pHighDateTimeStamp as string ('1900-01-01 00:00:00'),",
				"     pCurrDate as date (currentDate())",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'query',",
				"     store: 'sqlserver',",
				"     query: (case($pDeltaFlag == 'Y', concat('SELECT * FROM DBO.',$pSrcTblName,\" WHERE  ETL_UPDATE_TIMESTAMP > '\",$pUpdTimeStamp,\"'\"), concat('SELECT * FROM DBO.',$pSrcTblName,\" WHERE  ETL_UPDATE_TIMESTAMP > '\",$pHighDateTimeStamp,\"'\"))),",
				"     isolationLevel: 'READ_UNCOMMITTED') ~> source1",
				"source1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'adlscontainer',",
				"     folderPath: 'OutputDirectory',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     partitionFileNames:[(concat($pSrcTblName, \"_\",toString($pCurrDate,'YYYYMMDD'),\".txt\"))],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}