{
	"name": "DF_Table_IncrementalLod",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase05",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [],
			"scriptLines": [
				"parameters{",
				"     pSrcTblName as string ('EMPLOYEE_LIST'),",
				"     pDeltaFlag as string ('Y'),",
				"     pUpdTimeStamp as string ('2023-10-05 12:00:00')",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'query',",
				"     store: 'sqlserver',",
				"     query: (case \\r\\n($pDeltaFlag == 'Y', concat('SELECT * FROM DBO.',$pSrcTblName,'WHERE ETL_UPDATE_TIMESTAMP >',$pUpdTimeStamp),\\r\\n$pDeltaFlag == 'N', concat('SELECT * FROM DBO.',$pSrcTblName,'WHERE ETL_UPDATE_TIMESTAMP >','1900-01-0')\\r\\n)),",
				"     isolationLevel: 'READ_UNCOMMITTED') ~> source1"
			]
		}
	}
}